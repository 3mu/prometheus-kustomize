[
  {
    "op": "replace",
    "path": "/spec/replicas",
    "value": 1
  },
  {
    "op": "add",
    "path": "/spec/retention",
    "value": "7d"
  },
  {
    "op": "add",
    "path": "/spec/additionalScrapeConfigs",
    "value": {
      "name": "additional-scrape-configs",
      "key": "prometheus-additional.yml"
    }
  },
  {
    "op": "add",
    "path": "/spec/storage",
    "value": {
      "volumeClaimTemplate": {
        "spec": {
          "storageClassName": "standard",
          "resources": {
            "requests": {
              "storage": "10Gi"
            }
          }
        }
      }
    }
  }
]
